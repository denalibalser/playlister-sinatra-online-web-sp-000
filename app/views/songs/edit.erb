<h1>Edit Song <%= @song.name %></h1>

<form action="/songs/<%=@song.slug%>" method="POST">
<input type="hidden" name="_method" value="PATCH">

<label for="name">Song Name</label>
<input type="text" name="song[name]" id="name" value="<%= @song.name %>">

<label for="artist_name"> Artist Name </label>
<input type="text" name="artist[name]" id="artist_name" value="<%=@song.artist.name%>">

<%Genre.all.each do |genre| %>
    <label for="genre_name"><%= genre.name %></label>
    <input type="checkbox" name="genres[]" value="<%= genre.id %> id="genre_name">
<% end %>

<input type="submit" value="Save Edits">
</form>
